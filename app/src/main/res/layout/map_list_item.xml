<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/map_list_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="8dp"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingHorizontal="8dp"
                android:background="@color/honey"
        >
            <ImageView
                    android:id="@+id/map_list_item_card_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/background_green_yard_with_mountains"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:contentDescription="@string/map_list_item_preview_card_image_of_the_map"/>
            <TextView
                    android:id="@+id/map_list_item_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:layout_constraintTop_toBottomOf="@id/map_list_item_card_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/games_italic"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>