<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/map_list_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/material_dynamic_neutral_variant60"
        >
            <ImageView
                    android:id="@+id/map_list_item_card_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/background_green_yard_with_mountains"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:id="@+id/map_list_item_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FASE 1"
                    app:layout_constraintTop_toBottomOf="@id/map_list_item_card_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>